<h2 class="display-3">Sign up for newsletter</h2>

<div class="container bg-dark text-white p-5">
<form enctype="multipart/form-data" class="form-horizontal newsletterForm" role="form" action="/process?form=newsletter" method="POST">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  
  <div class="form-group mt-3">
    <label for="fieldName" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="fieldName" name="name">
    </div>
  </div>

  <div class="form-group mt-3">
    <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-4">
      <input type="email" class="form-control" id="fieldEmail" name="email">
    </div>
  </div>

  <div class="form-group mt-3">
    <label for="fieldPhoto" class="col-sm-2 control-label">Vacation Photo</label>
    <div class="col-sm-4">
      <input type="file" class="form-control" required accept="image/*" id="fieldPhote" name="photo">
    </div>
    
  </div>

  <div class="form-group mt-5">
    <div class="col-sm-offset-2 col-sm-4">
      <button type="submit" class="btn btn-primary btn-default">Submit</button>
    </div>
  </div>
</form>
</div>

<div class="container">
  <h1 id="h1" class="display-3"></h1>
</div>

{{#section 'script'}}
  <script>
    $(document).ready(function(){
      $('.newsletterForm').on('submit', function(evt){
        evt.preventDefault();
        let action = $(this).attr('action');
        let $container = $(this).closest('.formContainer');
        
        $.ajax({
          url: action,
          type: 'POST',
          success: function(data){
            if(data.success){
              $hh =$('#h1').html('Thank-You!')
              $container.html('<h2 class="display-3">Thank you!</h2>');
            }else{
              $hh =$('#h1').html('There was a problem!')
              $container.html('There was a problem.');
            }
          },
          error: function(){
            $container.html('There was a problem.');
          }
        });
      });
    });
  </script>
{{/section}}