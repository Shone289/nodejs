{{#if flash}}
  <div class="alert alert-dismissible alert-{{flash.type}}">
    <button type="button" class="close" data-bs-dismiss="alert" aria-hidden="true">
      &times;
    </button>
    <strong>{{flash.intro}}</strong>{{{flash.message}}}
  </div>
{{/if}}

<div class="container-fluid mt-5 mb-5 text-center">
  <h1 class="display-1">My index.handlebars view</h1>
</div>

{{#if pathc}}
  <h2 class="display-2 text-bg-dark">{{pathc}}</h2>
{{else}}
  <h2 class="display-2 text-bg-info">You can't see this cookie val here</h2>
{{/if}}